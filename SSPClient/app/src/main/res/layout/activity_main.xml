<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.domsi.sspclient.MainActivity"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnSchere"
            android:layout_width="95dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:background="@drawable/schere"
            android:layout_margin="10dp"
            android:onClick="btnSchereClicked"/>

        <Button
            android:id="@+id/btnStein"
            android:layout_width="95dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:background="@drawable/stein"
            android:layout_margin="10dp"
            android:onClick="btnSteinClicked"/>

        <Button
            android:id="@+id/btnPapier"
            android:layout_width="95dp"
            android:layout_height="110dp"
            android:layout_weight="1"
            android:background="@drawable/papier"
            android:layout_margin="10dp"
            android:onClick="btnPapierClicked"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player 1"
                android:id="@+id/txtP1"
                android:textSize="25dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/txtScore1"
                android:text="0"
                android:textSize="20dp"
                android:gravity="center" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/imgP1"
                android:background="@drawable/schere" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Player 2"
                android:id="@+id/txtP2"
                android:textSize="25dp"
                android:gravity="center"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="0"
                android:id="@+id/txtScore2"
                android:textSize="20dp"
                android:gravity="center" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgP2"
                android:background="@drawable/stein" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="... hat gewonnen"
        android:gravity="center"
        android:id="@+id/txtWinner"
        android:textSize="25dp" />
</LinearLayout>
